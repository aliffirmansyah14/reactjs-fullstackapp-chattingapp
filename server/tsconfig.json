{
   "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "rootDir": "./",
      "outDir": "./dir",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
   },
   "ts-node": {
      "esm": true
   },
   "include": ["./src/**/*.ts"],
   "exclude": ["node_modules", "./dir", "./src/**/*.test.ts"]
}
